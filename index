<script>
    let db = [];
    const mediaFazer = 29; // Sua m√©dia de 29km/L

    function mudarAba(aba) {
        document.querySelectorAll('.view-content').forEach(v => v.classList.add('hidden'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        
        document.getElementById('view-' + aba).classList.remove('hidden');
        event.target.classList.add('active');
    }

    function adicionar() {
        const desc = document.getElementById('desc').value;
        const valor = parseFloat(document.getElementById('valor').value);
        const tipo = document.getElementById('tipo').value;

        if (!desc || isNaN(valor)) return;

        db.push({ data: new Date().toLocaleDateString('pt-BR'), desc, valor, tipo });
        document.getElementById('desc').value = "";
        document.getElementById('valor').value = "";
        renderizar();
    }

    function renderizar() {
        const feed = document.getElementById('feed-atividades');
        const tabela = document.getElementById('corpo-tabela');
        let r = 0, d = 0;

        feed.innerHTML = ""; tabela.innerHTML = "";
        db.forEach(t => {
            if (t.tipo === 'receita') r += t.valor; else d += t.valor;
            feed.innerHTML += `<div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid var(--border)">
                <div>${t.desc}<br><small style="color: var(--text-gray)">${t.data}</small></div>
                <div style="color: ${t.tipo === 'receita' ? 'var(--success-green)' : 'var(--danger-red)'}">${t.tipo === 'receita' ? '+' : '-'} R$ ${t.valor.toLocaleString('pt-BR', {minimumFractionDigits:2})}</div>
            </div>`;
            tabela.innerHTML += `<tr><td>${t.data}</td><td>${t.desc}</td><td>${t.tipo}</td><td>R$ ${t.valor.toFixed(2)}</td></tr>`;
        });

        document.getElementById('saldo-total').innerText = `R$ ${(r - d).toLocaleString('pt-BR', {minimumFractionDigits:2})}`;
        document.getElementById('resumo-receita').innerText = `R$ ${r.toLocaleString('pt-BR', {minimumFractionDigits:2})}`;
        document.getElementById('resumo-despesa').innerText = `R$ ${d.toLocaleString('pt-BR', {minimumFractionDigits:2})}`;
    }

    function calcularDrivo() {
        const km = parseFloat(document.getElementById('km-viagem').value);
        const preco = parseFloat(document.getElementById('preco-litro').value);

        if (isNaN(km) || isNaN(preco)) return alert("Informe a quilometragem e o pre√ßo do combust√≠vel.");

        const litros = km / mediaFazer;
        const custoTotal = litros * preco;

        document.getElementById('resultado-viagem').innerText = `R$ ${custoTotal.toLocaleString('pt-BR', {minimumFractionDigits:2})}`;
        document.getElementById('litros-necessarios').innerText = `${litros.toFixed(2)} litros necess√°rios para percorrer ${km} km.`;
    }

    function exportarCSV() {
        let csv = "Data;Descricao;Tipo;Valor\n";
        db.forEach(t => csv += `${t.data};${t.desc};${t.tipo};${t.valor}\n`);
        const blob = new Blob([csv], { type: 'text/csv' });
        const a = document.createElement("a");
        a.href = URL.createObjectURL(blob);
        a.download = "financas_weverson.csv";
        a.click();
    }
</script>
